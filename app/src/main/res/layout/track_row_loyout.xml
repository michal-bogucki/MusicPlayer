<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dp"
    app:cardBackgroundColor="#37474F"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <ImageView
            android:id="@+id/coverCdTRIV"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_play_arrow_white_24dp" />

        <TextView
            android:id="@+id/trackNameTRTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="20dp"
            android:text="TextView"
            android:textSize="14dp"
            android:maxLength="30"
            app:layout_constraintLeft_toRightOf="@+id/coverCdTRIV"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/artistNameTRTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="19dp"
            android:text="TextView"
            android:textSize="10dp"
            android:maxLength="24"
            android:textColor="@color/colorAccent"
            app:layout_constraintLeft_toRightOf="@+id/coverCdTRIV"
            app:layout_constraintTop_toBottomOf="@+id/trackNameTRTV" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>